---
title: blogPost
---
<!doctype html>
<link rel="stylesheet" href="/bundle.css">
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
  </head>
  <body>
    <div class="blogHeader">
      <h1>{{title}}</h1>
      {% if thumbnail %}
        <img alt={{thumbnail}} src={{thumbnail}}>
      {% endif %}
    </div>

    {{ content | safe }}

    <hr>
    <div class="blogFooter">
      <div class="pageTags">
        {% set comma = joiner() %}
        Tagged: 
        {% for tag in tags %}
          {{ comma() }} {{ tag }}
        {%- endfor %}
      </div>
      {% if tech.length > 0 %}
        <div class="pageTech">
          Tech: 
          {% for t in tech %}
            {{ comma() }} {{ t }}
          {%- endfor %}
        </div>
      {% endif %}
    </div>
  </body>
</html>